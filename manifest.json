{
	"name": "Vārddienis WEB",
	"version": "1.6.0",
	"manifest_version": 2,

	"description": "Šodienas un rītdienas vārda dienu gaviļnieki, meklēšana un citas iespējas.",
	"icons": {
		"16": "img/ikona16.png",
		"48": "img/ikona48.png",
		"128": "img/ikona128.png" },
	"app": {
		"launch": {
			"local_path": "index.html"
		}
	},

	"permissions": [
		"<all_urls>",
		"unlimitedStorage",
		"notifications",
		"tabs"
	],

	"homepage_url": "http://al.id.lv",
	"offline_enabled": true,
	"update_url": "https://raw.github.com/arvislacis/varddienis_web/master/update.xml"
}